@model List<FoodStore.Models.CommentView.CommentViewModel>

@{
    <script src="~/Models/CommentView/Comment.js"></script>
}
@{ var listcomment = (List<FoodStore.Models.CommentView.CommentViewModel>)ViewBag.ListComment;}
@{var kh = Session["TaiKhoan2"]; }


<div id="reviews">

    @foreach (var itemcomment in Model)
    {
        if (itemcomment.ParentID == 0)
        {


            <!-- Review item START -->
            <div class="d-md-flex my-4">
                <div id="all-comment">


                    <ul class="reviews">


                        <li>


                            <div class="review-heading">
                                <h5 class="name">@itemcomment.CustomerName</h5>
                                <p class="date">@itemcomment.CommentDate</p>
                                <ul class="list-inline mb-0">
                                    <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>
                                    @if (itemcomment.Rate >= 2)
                                    {
                                        <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>

                                    }
                                    else
                                    {
                                        <li class="list-inline-item me-0"><i class="far fa-star text-warning"></i></li>
                                    }
                                    @if (itemcomment.Rate >= 3)
                                    {
                                        <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>

                                    }
                                    else
                                    {
                                        <li class="list-inline-item me-0"><i class="far fa-star text-warning"></i></li>
                                    }
                                    @if (itemcomment.Rate >= 4)
                                    {
                                        <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>

                                    }
                                    else
                                    {
                                        <li class="list-inline-item me-0"><i class="far fa-star text-warning"></i></li>
                                    }
                                    @if (itemcomment.Rate >= 5)
                                    {
                                        <li class="list-inline-item me-0"><i class="fas fa-star text-warning"></i></li>

                                    }
                                    else
                                    {
                                        <li class="list-inline-item me-0"><i class="far fa-star text-warning"></i></li>
                                    }

                                </ul>

                            </div>
                            <!-- Info -->
                            <div class="review-body">
                                <p class="mb-2" style="font-weight : 600">@itemcomment.CommentMsg</p>
                            </div>

                            <!--<div class="mt-2">

                                <hr />
                                <div class="bg-white"></div>
                                <div class="d-flex flex-row">
                                    <a class="accordion-collapse collapse show" href="#commmentreply-@itemcomment.ID" data-bs-toggle="collapse" aria-expanded="true" aria-controls="collapse-1">-->
                            @*<i class="fas fa-reply me-2"></i>Trả lời*@
                            <!--</a>
                            </div>-->
                            <!-- Reply button -->



                    </ul>


                </div>


            </div>
            <hr />
        }


    }
</div>
