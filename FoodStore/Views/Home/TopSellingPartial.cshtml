
<style>
    .bottom {
        margin-bottom: 50px;
    }
    .topsl img{
        border-radius : 1.5rem 1.5rem 0 0;
    }

    .product-img {
        height: 200px;
        object-fit: cover;
        border-radius: 1.5rem;
    }

    .img-product {
        border-radius: 1.5rem 1.5rem 0 0;
        max-height: 100%;
    }

    .product .add-to-cart {
        bottom: 9px;
    }
    .add-to-cart a {
        font-weight: bold;
        color: #fff;
    }

        .add-to-cart a:hover {
            color: red;
        }
</style>
<div class="row bottom">

    <!-- section title -->
    <div class="col-md-12">
        <div class="section-title">
            <h4 class="title">Bán chạy nhất</h4>
        </div>
    </div>

    <!-- product -->

    <div class="col-md-12">
        <div class="row">
            <div class="products-tabs">
                <!-- tab -->
                <div id="tab2" class="tab-pane fade in active">
                    <div class="products-slick" data-nav="#slick-nav-2">
                        @foreach (var p in Model)
                        {
                            <div class="product">
                                <a href="~/Products/ChiTietSanPham/@p.ProductId">
                                    <div class="product-img topsl">
                                        <img src="~/Content/Images/@p.Image" class="img-product" />
                                    </div>
                                    <div class="product-body">
                                        <h3 class="product-name"><a href="~/Products/ChiTietSanPham/@p.ProductId">@p.ProductName</a></h3>
                                        <h4 class="product-price">@String.Format("{0:0,00}", @p.Price)đ</h4>
                                    </div>
                                </a>
                                <div class="add-to-cart">
                                    <button class="add-to-cart-btn" data-id="@p.ProductId" id="@($"btn{p.ProductId}")">
                                        <i class="fa fa-shopping-cart"></i>
                                        <a href="@Url.Action("ThemGioHang","GioHang",new { idproduct = p.ProductId })">
                                            <p class="@($"text{p.ProductId}") ">Thêm vào giỏ hàng</p>
                                        </a>
                                    </button>
                                </div>

                            </div>
                        }




                    </div>
                    <div id="slick-nav-2" class="products-slick-nav"></div>
                </div>
                <!-- /tab -->
            </div>
        </div>
    </div>





    </row>
    @section GioHang{

        <script src="~/Scripts/Cart.js"></script>

    }
