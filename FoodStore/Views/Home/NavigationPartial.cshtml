    .a{
        font-weight: 600;
        font-size : 1.4rem;
        text-transform : uppercase;
    }


    #navigation {
        position: sticky !important;
        top: 0px;
        z-index: 100;
        box-shadow: rgba(33, 35, 38, 0.1) 0px 10px 10px -10px;
        justify-content :center;
