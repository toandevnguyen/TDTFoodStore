@model FoodStore.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    <script src="~/Areas/Admin/Content/ckeditor/ckeditor.js"></script>
}

<div class="container">
    <h4>Thêm món mới    </h4>
    @*Thêm thuộc tính cho form để upload ảnh*@
    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new
    {
        @enctype =
"multipart/form-data"
    }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Tên món:</label>
                <div class="col-md-10">
                    <input type="text" size="70" name="sTenSach" value="@ViewBag.TenSach" class="form-control"
                           required />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Mô tả:</label>
                <div class="col-md-10">


                    <textarea name="sMoTa" id="Description"><p>@ViewBag.Description</p></textarea>
                    <script>
                        CKEDITOR.replace("Description");
                    </script>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Hình ảnh:</label>
                <div class="col-md-10">
                    <input type="file" name="fFileUpload" class="form-control" />
                    @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                    @ViewBag.ThongBao
                </div>
            </div>
           
           
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Giá bán:</label>
                <div class="col-md-10">
                    <input type="number" min="1" required name="mDonGia"
                           value="@ViewBag.DonGia" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Danh mục:</label>
                <div class="col-md-10">
                    @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                    @Html.DropDownList("MaCD", null, new{@class = "form-control" })
                </div>
            </div>
           
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm mới" class="btn btn-success" />
                    @Html.ActionLink("Về trang chủ", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                </div>

            </div>
            
    }
    
</div>
